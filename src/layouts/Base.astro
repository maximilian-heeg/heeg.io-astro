---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import '@unocss/reset/normalize.css'
import 'uno.css'

import Tracker from '../components/Tracker.astro';
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro';
import '../styles/fonts.css'
---

<!DOCTYPE html>
<html lang="en">

    <head>
        <title>{title}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" 
              content="Heeg.IO
                       my personal webite.">
        <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
        <link rel="manifest" href="/favicon/site.webmanifest">
        <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#376297">
        <link rel="shortcut icon" href="/favicon/favicon.ico">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="msapplication-config" content="/favicon/browserconfig.xml">
        <meta name="theme-color" content="#ffffff">
        <Tracker />
    </head>

    <body class='font-sans m-0 min-h-screen flex flex-col'
    all="scroll-m-t-14">
	<Navigation />

    <div class="pt-14 flex-grow">
        <main>
            
            
        <slot />
        </main>
    </div>
	

	<Footer />      

    </body>

</html>

<style>
    main {
        @apply max-w-screen-xl mx-auto grid grid-cols-12 my-6;
    }
</style>